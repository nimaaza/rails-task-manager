<h1>My Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <% if task.completed %>
      <input type="checkbox" checked id=<%= task.id %>>
    <% else %>
      <input type="checkbox" id=<%= task.id %>>
    <% end %>
    <label for=<%= task.id %>> <%= link_to task.title, task_path(task.id) %>  <%= link_to '(delete)', task_delete_path(task), method: 'delete' %> </label>
    <br>
  <% end %>
</ul>

<%= link_to '+ Add a new task', tasks_new_path %>
